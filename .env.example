# =============================================================================
# OZA System 環境変数設定ファイル
# =============================================================================
# このファイルをコピーして .env を作成してください:
#   cp .env.example .env
#
# 本番環境では必ず安全な値に変更してください
# =============================================================================

# Docker Compose プロジェクト名
COMPOSE_PROJECT_NAME=oza_system

# =============================================================================
# Django Settings
# =============================================================================

# SECRET_KEY: 本番環境では必ず安全なランダム文字列に変更してください
# 生成方法: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=change-this-to-a-secure-random-key

# JWT署名用キー（オプション、未設定の場合はSECRET_KEYを使用）
# JWT_SECRET_KEY=your-jwt-secret-key-here

# デバッグモード: 本番環境では必ず False に設定
DJANGO_DEBUG=False

# 許可するホスト（カンマ区切り）
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# CORS許可オリジン（カンマ区切り）
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# CSRF信頼オリジン（カンマ区切り）
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# SSL使用（本番環境でHTTPSを使用する場合は true）
USE_SSL=false

# =============================================================================
# Database Settings
# =============================================================================

DB_NAME=oza_system
DB_USER=oza_user
DB_PASSWORD=change-this-to-a-secure-password
DB_HOST=db
DB_PORT=5432

# =============================================================================
# Redis Settings
# =============================================================================

REDIS_URL=redis://redis:6379/0

# =============================================================================
# Frontend Settings
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
